{
  "manifest_version": 3,
  "name": "My Messages",
  "version": "1.0.0",
  "description": "Chrome extension for displaying company wide messages",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
